version: '3'
services:
  mysql:
    image: mysql:5
    network_mode: host
    restart: always
    volumes:
      - /var/data/mysql/lib:/var/lib/mysql
    environment:
      MYSQL_DATABASE: "{{ mysql_database }}"
      MYSQL_USER: "{{ mysql_user }}"
      MYSQL_PASSWORD: "{{ mysql_password }}"
      MYSQL_ROOT_PASSWORD: "{{ mysql_password }}"
