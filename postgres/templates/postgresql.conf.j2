
listen_addresses        = '*'
port                    = 5432
max_connections         = 1024

shared_buffers             = 1024MB			# min 128kB
temp_buffers               = 64MB			# min 800kB
work_mem                   = 32MB				# min 64kB
maintenance_work_mem       = 256MB		# min 1MB
dynamic_shared_memory_type = posix	# the default is the first option

shared_preload_libraries  = 'auto_explain,pg_stat_statements'		# (change requires restart)
track_activity_query_size = 2048

fsync              = on			# turns forced synchronization on or off
synchronous_commit = off		# synchronization level;
wal_keep_segments  = 32	    # in logfile segments, 16MB each; 0 disables

log_min_messages           = warning		# values in order of decreasing detail:
log_min_error_statement    = error	# values in order of decreasing detail:
log_min_duration_statement = 1000	# -1 is disabled, 0 logs all statements
log_line_prefix            = '%t [%p]: [%l-1] db=%d,user=%u '			# special values:
log_lock_waits             = on			# log lock waits >= deadlock_timeout
log_statement              = 'none'			# none, ddl, mod, all
log_temp_files             = 0			# log temporary files equal or larger
log_timezone               = 'localtime'

log_autovacuum_min_duration     = 0	# -1 disables, 0 logs all actions and
autovacuum_max_workers          = 6		# max number of autovacuum subprocesses
autovacuum_naptime              = 960s		# time between autovacuum runs
autovacuum_vacuum_threshold     = 128	# min number of row updates before
autovacuum_analyze_threshold    = 256	# min number of row updates before
autovacuum_vacuum_scale_factor  = 0.01	# fraction of table size before vacuum
autovacuum_analyze_scale_factor = 0.05	# fraction of table size before analyze

statement_timeout = 600000			# in milliseconds, 0 is disabled

datestyle = 'iso, mdy'
timezone  = 'localtime'

lc_messages                = 'C'			# locale for system error message
lc_monetary                = 'en_US.UTF-8'			# locale for monetary formatting
lc_numeric                 = 'en_US.UTF-8'			# locale for number formatting
lc_time                    = 'en_US.UTF-8'				# locale for time formatting
default_text_search_config = 'ru'

escape_string_warning = off

auto_explain.log_min_duration      = -1
auto_explain.log_analyze           = off
auto_explain.log_verbose           = off
auto_explain.log_buffers           = off
auto_explain.log_format            = 'text'
auto_explain.log_nested_statements = off
