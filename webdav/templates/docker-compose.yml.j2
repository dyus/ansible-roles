version: '3'
services:
  webdav:
    image: nginx:1.13.10
    network_mode: host
    restart: always
    ports:
      - 8090:8090
    volumes:
      - {{ webdav_path }}:/var/www
      - {{ webdav_path }}/nginx.conf:/etc/nginx/nginx.conf:ro
    environment:
      SERVICE_NAME: system/webdav
      SERVICE_CHECK_TCP: "true"
